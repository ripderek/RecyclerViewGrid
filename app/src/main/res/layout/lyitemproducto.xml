<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/Producto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardBackgroundColor="@color/cardview_light_background"
        app:cardCornerRadius="15dp"
        app:cardElevation="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="235dp"
            android:padding="0dp"
            android:scrollbarSize="0dp">

            <ImageView
                android:id="@+id/Productoimg"
                android:layout_width="383dp"
                android:layout_height="116dp"
                android:padding="4dp" />

            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="371dp"
                android:layout_height="47dp"
                android:layout_below="@+id/Productoimg"
                android:layout_alignParentStart="true"
                android:layout_marginStart="11dp"
                android:layout_marginLeft="-380dp"
                android:layout_marginTop="12dp"
                android:layout_toRightOf="@id/Productoimg"
                android:text="Nombre"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#000523"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtDescripcion"
                android:layout_width="132dp"
                android:layout_height="32dp"
                android:layout_below="@+id/Productoimg"
                android:layout_alignParentStart="true"
                android:layout_marginStart="12dp"
                android:layout_marginLeft="-371dp"
                android:layout_marginTop="88dp"
                android:layout_toRightOf="@id/Productoimg"
                android:background="@color/white"
                android:text="DescripciÃ³n"
                android:textAlignment="viewStart"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small.Inverse"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtPrecio"
                android:layout_width="115dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtTitle"
                android:layout_alignParentStart="true"
                android:layout_marginStart="11dp"
                android:layout_marginLeft="-374dp"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="17dp"
                android:layout_toRightOf="@id/Productoimg"
                android:text="Precio"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#001902"
                android:textStyle="bold" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>